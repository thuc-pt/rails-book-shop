<div class="container-fluid">
  <p class="text-center text-success"><%= notice %></p>
  <div class="row">
    <%=render 'admin/list' %>
    <div class="col-xl-9">
      <div class="jumbotron">
        <h1>Thông tin sách</h1>
        <br>
        <table class="table">
          <thead>
          <tr>
            <th>Tên Sách</th>
            <th>Tác Giả</th>
            <th>Đơn Giá</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.author %></td>
              <td><%= book.price %></td>
              <td><%= link_to 'Chi tiết', book, class: 'btn btn-info' %></td>
              <td><%= link_to 'Sửa', edit_book_path(book), class: 'btn btn-warning' %></td>
              <td><%= link_to 'Xóa', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <br>
        <%= link_to 'New Book', new_book_path, class: 'btn btn-success' %>
        <p><%=will_paginate @books, class: 'justify-content-center' %></p>
      </div>
    </div>
  </div>
</div>
