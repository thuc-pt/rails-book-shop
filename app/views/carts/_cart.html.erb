<div class="container">
  <p class="text-center text-success"><%= notice %></p>
  <div class="jumbotron">
    <h1>Giỏ hàng</h1>
    <br>
    <%if @cart.items.empty? %>
      <h3>Giỏ hàng rỗng!</h3>
      <br>
    <%else %>
      <table class="table">
        <tr>
          <th>Hình ảnh</th>
          <th>Tên sách</th>
          <th>Đơn giá</th>
          <th>Số lượng</th>
          <th>Thành tiền</th>
        </tr>
        <%=render cart.items %>
      </table>
      <div class="text-right">
        <h4>Tổng thanh toán: <%=@cart.totalPrice %>VND</h4>
      </div>
      </div>
      <div class="row">
        <div class="col-xl-4">
          <%=button_to 'Xóa toàn bộ giỏ hàng', @cart, method: :delete, data: {confirm: 'Bạn muốn xóa hết giỏ hàng?'}, class: 'btn btn-danger btn-block btn-lg' %>
        </div>
        <div class="col-xl-4">
          <%=button_to 'Tiến hành thanh toán', new_order_path, method: :get, class: 'btn btn-info btn-lg btn-block' %>
        </div>
    <%end %>

    <div class="col-xl-4">
      <%=link_to 'Tiếp tục mua hàng', root_path, class: 'btn btn-success btn-block btn-lg' %>
    </div>
  </div>
</div>