<div class="container">
  <p class="text-center text-success"><%= notice %></p>
  <div class="jumbotron">
    <h1>Nhận xét của bạn</h1>
    <br>
    <table class="table">
      <thead>
      <tr>
        <th>Tên Sách</th>
        <th>Đánh giá</th>
        <th>Ngày</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @feedbacks.each do |feedback| %>
        <tr>
          <td><%= feedback.bookstore.book.title %></td>
          <td><%= feedback.start %> sao</td>
          <td><%= feedback.created_at.strftime("%d-%m-%Y") %></td>
          <td><%= link_to 'Show', bookstore_path(feedback.bookstore_id), class: 'btn btn-info' %></td>
          <td><%= link_to 'Edit', edit_feedback_path(feedback), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>