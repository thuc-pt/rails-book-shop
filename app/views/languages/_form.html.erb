<%= form_with(model: language, local: true) do |form| %>
  <% if language.errors.any? %>
    <div id="alert alert-danger">
      <% language.errors.full_messages.each do |message| %><%= message %><% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="row">
    <div class="col-xl-6">
      <%= form.submit 'Save', class: 'btn btn-success btn-block' %>
    </div>
    <div class="col-xl-6">
      <%= link_to 'Back', languages_path, class: 'btn btn-secondary btn-block' %>
    </div>
  </div>
<% end %>