<div class="container">
  <%if flash[:alert] %>
    <p class="text-center text-danger"><%= flash[:alert]%></p>
  <%end %>
  <div class="jumbotron">
    <div class="row">
      <div class="col-xl-3"></div>
      <div class="col-xl-6">
        <%=form_tag '/login' do%>
          <h1>ĐĂNG NHẬP</h1>
          <hr>
          <div class="form-group">
            <label>Tài khoản</label><br>
            <%=text_field_tag :username, params[:username], class: 'form-control' %>
          </div>
          <div class="form-group">
            <label>Mật khẩu</label><br>
            <%=password_field_tag :password, params[:password], class: 'form-control' %>
          </div>
          <%=submit_tag 'ĐĂNG NHẬP', class: 'btn btn-block btn-lg btn-info' %>
        <%end%>
      </div>
      <div class="col-xl-3"></div>
    </div>
  </div>
</div>