<div class="container">
  <p class="text-center text-success"><%= notice %></p>
  <div class="jumbotron">
    <h1>Slides</h1>
    <br>
    <table class="table">
      <thead>
      <tr>
        <th>Hình ảnh</th>
        <th>Link</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @slides.each do |slide| %>
        <tr>
          <td><%= image_tag(slide.url_img.url, style: 'width:100px; height:auto') %></td>
          <td><%= slide.link_slide.name %></td>
          <td><%= link_to 'Edit', edit_slide_path(slide), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', slide, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Slide', new_slide_path, class: 'btn btn-success' %>
    <p><%=will_paginate @slides, class: 'justify-content-center' %></p>
  </div>
</div>