<div class="container">
  <div class="jumbotron">
    <h1>Giáo trình và sách tham khảo</h1>
    <hr>
    <div class="row">
      <%@textBook.each do |b| %>
        <div class="col-xl-2">
          <a href="<%=bookstore_path(b) %>" class="detail">
            <%=image_tag(b.book.url_img.url, class: 'img-fluid') %>
            <p><%=b.book.title %></p>
          </a>
          <span><%=b.book.price %>VND</span>
        </div>
      <% end %>
    </div>
  </div>
</div>